<UserControl x:Class="OfficeTicketingTool.Views.LoginView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:OfficeTicketingTool.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" 
             d:DesignWidth="800">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/OfficeTicketingTool;component/Views/ModernStyles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid Background="#F5F5F5">
        <Border Background="White" 
                CornerRadius="8"
                Margin="32" 
                Padding="32" 
                Width="400" 
                VerticalAlignment="Center" 
                HorizontalAlignment="Center">
            <Border.Effect>
                <DropShadowEffect BlurRadius="20" 
                                  Opacity="0.2" 
                                  ShadowDepth="4" 
                                  Direction="270"/>
            </Border.Effect>

            <StackPanel>
                <TextBlock Text="Welcome to Office Ticketing Tool" 
                          FontSize="24" 
                          FontWeight="SemiBold"
                          Foreground="#333333"
                          HorizontalAlignment="Center" 
                          Margin="0,0,0,32"/>

                <TextBlock Text="Username" 
                          FontSize="14" 
                          Foreground="#666666" 
                          Margin="0,0,0,4"/>
                <TextBox x:Name="UsernameTextBox"
                        Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}"
                        Style="{StaticResource ModernTextBox}"
                        Margin="0,0,0,16"/>

                <TextBlock Text="Password" 
                          FontSize="14" 
                          Foreground="#666666" 
                          Margin="0,0,0,4"/>
                <PasswordBox x:Name="PasswordBox"
                           Style="{StaticResource ModernPasswordBox}"
                           Margin="0,0,0,24"/>

                <Button Content="SIGN IN" 
                       Command="{Binding LoginCommand}"
                       CommandParameter="{Binding ElementName=PasswordBox}"
                       Style="{StaticResource ModernButton}"
                       HorizontalAlignment="Center" 
                       Margin="0,0,0,16"/>

                <TextBlock Text="{Binding ErrorMessage}" 
                          Foreground="#F44336" 
                          FontSize="12"
                          TextWrapping="Wrap" 
                          HorizontalAlignment="Center" 
                          Visibility="{Binding HasError, Converter={StaticResource BooleanToVisibilityConverter}}" 
                          Margin="0,0,0,8"/>

                <ProgressBar IsIndeterminate="True" 
                           Height="4" 
                           Background="#E0E0E0"
                           Foreground="#6200EA"
                           Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>